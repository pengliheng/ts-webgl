{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "tsx": "react",
    "alwaysStrict": true,
    "declaration": true, // 生成相应的 '.d.ts' 文件
    "sourceMap": true, // 生成相应的 '.map' 文件
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "babylonjs": ["node_modules/babylonjs/babylon.d.ts"]
    }
  }
}